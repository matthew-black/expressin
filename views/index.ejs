<% include partials/header %>
<h1>Hello from EJS-Land!</h1>

<h3>Add a peep:</h3>
<% if(errors != null){ %>
  <ul>
  <% errors.forEach(function(error){ %>
    <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>
<form method="POST" action="/peeps">
  <label>First Name</label>
  <br>
  <input type="text" name="first_name">
  <br>
  <label>Last Name</label>
  <br>
  <input type="text" name="last_name">
  <br>
  <label>Email</label>
  <br>
  <input type="text" name="email">
  <br><br>
  <input type="submit" value="Add Peep">
</form>
<h3>Here are all the peeps:</h3>
<ul>
  <% peeps.forEach(function(peep){ %>
    <li>Hi there <%= peep.first_name %> <%= peep.last_name %> - <a href="#" class="deletePeep" data-id="<%= peep._id %>">Delete</a></li>
  <% }) %>
</ul>

<% include partials/footer %>